// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  STUDENT
  TEACHER
  PARENT
  TUTOR
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(STUDENT)
  isSubscribed  Boolean   @default(false)
  questionsUsed Int       @default(0)
  freeQuestionLimit Int   @default(5)
  subscriptionCode String?
  subscriptionExpiry DateTime?
  monthlyPrice  Float     @default(19.99)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  progress      Progress[]
  questionAttempts UserQuestionAttempt[]
  subscriptionCodes SubscriptionCode[]
  tutorApplication TutorApplication?
  children      ParentChild[] @relation("Parent")
  parents       ParentChild[] @relation("Child")
  classrooms    Classroom[]   @relation("Teacher")
  enrollments   StudentEnrollment[]
  answerSheets  AnswerSheet[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Progress {
  id          String   @id @default(cuid())
  userId      String
  topic       String
  difficulty  String
  score       Int
  completedAt DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Question {
  id                String   @id @default(cuid())
  title             String
  description       String   @db.Text
  difficulty        String
  topic             String
  testCases         String[] @db.Text
  solutionTemplate  String   @db.Text
  answer            String?  @db.Text
  explanation       String?  @db.Text
  createdAt         DateTime @default(now())
  attempts          UserQuestionAttempt[]
  
  @@index([topic, difficulty])
}

model UserQuestionAttempt {
  id          String   @id @default(cuid())
  userId      String
  questionId  String
  code        String?  @db.Text
  status      String?  // "pending", "passed", "failed"
  output      String?  @db.Text
  attemptedAt DateTime @default(now())
  completedAt DateTime?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questionId])
  @@index([userId])
}


model SubscriptionCode {
  id        String   @id @default(cuid())
  code      String   @unique
  isUsed    Boolean  @default(false)
  usedBy    String?
  createdAt DateTime @default(now())
  usedAt    DateTime?
  
  user User? @relation(fields: [usedBy], references: [id], onDelete: SetNull)
  
  @@index([code])
  @@index([isUsed])
}

model Exam {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  submissions ExamSubmission[]
}

model ExamSubmission {
  id          String   @id @default(cuid())
  examId      String?
  studentName String?
  score       Int?
  status      String   @default("Pending") // Pending, Graded
  summary     String?  @db.Text
  details     String?  @db.Text // JSON string of graded questions
  createdAt   DateTime @default(now())
  
  exam        Exam?    @relation(fields: [examId], references: [id], onDelete: SetNull)
}

model TutorApplication {
  id              String   @id @default(cuid())
  userId          String   @unique
  fullName        String
  email           String
  phone           String?
  subjects        String[]
  qualifications  String   @db.Text
  experience      String   @db.Text
  bio             String?  @db.Text
  linkedinUrl     String?
  status          String   @default("PENDING") // PENDING | APPROVED | REJECTED
  reviewNote      String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ParentChild {
  id        String @id @default(cuid())
  parentId  String
  childId   String
  parent    User   @relation("Parent", fields: [parentId], references: [id], onDelete: Cascade)
  child     User   @relation("Child", fields: [childId], references: [id], onDelete: Cascade)
  
  @@unique([parentId, childId])
}

// ============ CLASSROOM SYSTEM ============

model Grade {
  id        String     @id @default(cuid())
  name      String     @unique // e.g. "10th Grade", "12th Grade"
  divisions Division[]
  createdAt DateTime   @default(now())
}

model Division {
  id          String              @id @default(cuid())
  name        String              // e.g. "Division A", "Division 1"
  gradeId     String
  grade       Grade               @relation(fields: [gradeId], references: [id], onDelete: Cascade)
  classrooms  Classroom[]
  enrollments StudentEnrollment[]
  createdAt   DateTime            @default(now())

  @@unique([gradeId, name])
}

model Subject {
  id         String      @id @default(cuid())
  name       String      @unique // e.g. "Mathematics", "Physics"
  classrooms Classroom[]
  createdAt  DateTime    @default(now())
}

model Classroom {
  id             String         @id @default(cuid())
  teacherId      String
  divisionId     String
  subjectId      String
  teacher        User           @relation("Teacher", fields: [teacherId], references: [id], onDelete: Cascade)
  division       Division       @relation(fields: [divisionId], references: [id], onDelete: Cascade)
  subject        Subject        @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  questionPapers QuestionPaper[]
  createdAt      DateTime       @default(now())

  @@unique([teacherId, divisionId, subjectId])
}

model StudentEnrollment {
  id         String   @id @default(cuid())
  studentId  String
  divisionId String
  student    User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  division   Division @relation(fields: [divisionId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([studentId, divisionId])
}

model QuestionPaper {
  id            String        @id @default(cuid())
  classroomId   String
  title         String        // e.g. "Mid-Term Exam - March 2026"
  fileUrl       String        // URL or path to uploaded PDF/image
  extractedText String?       @db.Text  // AI-extracted full text from the paper
  markScheme    String?       @db.Text  // JSON: [{ q_num, question_text, max_marks }]
  totalMarks    Int           @default(0)
  classroom     Classroom     @relation(fields: [classroomId], references: [id], onDelete: Cascade)
  answerSheets  AnswerSheet[]
  createdAt     DateTime      @default(now())
}

model AnswerSheet {
  id              String        @id @default(cuid())
  questionPaperId String
  studentId       String
  fileUrl         String        // URL or path to uploaded answer sheet
  questionPaper   QuestionPaper @relation(fields: [questionPaperId], references: [id], onDelete: Cascade)
  student         User          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  gradedResult    GradedResult?
  createdAt       DateTime      @default(now())
}

model GradedResult {
  id            String      @id @default(cuid())
  answerSheetId String      @unique
  totalScore    Int         @default(0)
  maxScore      Int         @default(0)
  percentage    Float       @default(0)
  questionsJson String      @db.Text  // JSON: [{ q_num, max_marks, scored, remarks }]
  overallRemarks String?    @db.Text
  answerSheet   AnswerSheet @relation(fields: [answerSheetId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
}

model IntegrationSetting {
  id           String   @id @default(cuid())
  kind         String   @unique // "ERP"
  provider     String
  tenant       String
  clientId     String
  clientSecret String
  status       String   @default("configured") // configured | disabled
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
